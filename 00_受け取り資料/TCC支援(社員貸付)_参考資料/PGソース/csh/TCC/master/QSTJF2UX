#!/bin/csh
#　スクリプト名  ： QSTJF2UX
#　 機  能       ： 月次用受信ファイル作成１（自振返戻結果・追加登録）
#　 作成者       ： FIP
#

##################################
#           環境設定             #
##################################
set    SHELL_NAME = $0                                 # シェル名
setenv JOB_ID       $SHELL_NAME:t                      # ジョブ名
setenv JOBNET_ID   'QSTJF1UX'                          # ジョブネット名
set    LOGFILE    = $USER_LOG_DIR/${JOB_ID}.log        # ログファイル名
set    LOGWRITE   = $EXE_DIR/QUAJ_MSGLOG.BAT           # ログ出力モジュール
set    USERKEY    = 'QSTJF2UX'                         # ユーザキー 
set    KINOU      = '月次用受信ファイルの作成１（自振返戻結果・追加登録）'

#########################################
# STEP-1                                #
#########################################
set MODULE = 'SHELL'
$LOGWRITE "$MODULE" I "開始:$KINOU" "$USERKEY"   # 開始メッセージの出力

#setenv NLS_LANG Japanese_Japan.JA16SJIS  

### ファイルをマージする ###
cat $QJ_DATA_DIR/qt/data/host/zen/qsaf_jfhenrei.kur $FROMHOST1_DIR/qt/rcv/qsaf_jfhenrei.jsn > $QJ_DATA_DIR/qt/data/host/merge/qsaf_jfhenrei.hft

set rc = $status

#setenv NLS_LANG Japanese_Japan.JA16EUC  

if ( $rc != 0 ) then
	$LOGWRITE  "$MODULE"  E  "失敗:$KINOU  RC=[$rc]"  "$USERKEY"
	exit  1                                      # 異常終了
endif

$LOGWRITE "$MODULE" I "終了:$KINOU" "$USERKEY"   # 終了メッセージの出力
exit 0                                           # 正常終了

