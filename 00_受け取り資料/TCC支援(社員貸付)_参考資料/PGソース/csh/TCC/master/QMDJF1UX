#!/bin/csh
#　スクリプト名  ： QMDJF1UX
#　 機  能       ： 日次用受信ファイル作成２・臨時カードポイント還元データ作成
#　 作成者       ： 芦久保
#

##################################
#           環境設定             #
##################################
set    SHELL_NAME = $0                                 # シェル名
setenv JOB_ID       $SHELL_NAME:t                      # ジョブ名
setenv JOBNET_ID   'QMD001UX'                          # ジョブネット名
set    LOGFILE    = $USER_LOG_DIR/${JOB_ID}.log        # ログファイル名
set    LOGWRITE   = $EXE_DIR/QUAJ_MSGLOG.BAT           # ログ出力モジュール
set    USERKEY    = 'QMDJF1UX'                         # ユーザキー 
set    KINOU      = '日次用受信ファイル作成２・臨時カードポイント還元データ作成'

#########################################
# STEP-1                                #
#########################################
set MODULE = 'SHELL'
$LOGWRITE "$MODULE" I "開始:$KINOU" "$USERKEY"   # 開始メッセージの出力

#setenv NLS_LANG Japanese_Japan.JA16SJIS  

### ファイルをマージする ###
cat $FROMHOST1_DIR/qm/rcv/qmbf_pointkangen.jsn $QJ_DATA_DIR/qm/data/host/zen/qmbf_pointkangen.kur > $QJ_DATA_DIR/qm/data/host/merge/qmbf_pointkangen.hft

set rc = $status

#setenv NLS_LANG Japanese_Japan.JA16EUC  

if ( $rc != 0 ) then
	$LOGWRITE  "$MODULE"  E  "失敗:$KINOU  RC=[$rc]"  "$USERKEY"
	exit  1                                      # 異常終了
endif

$LOGWRITE "$MODULE" I "終了:$KINOU" "$USERKEY"   # 終了メッセージの出力
exit 0                                           # 正常終了

