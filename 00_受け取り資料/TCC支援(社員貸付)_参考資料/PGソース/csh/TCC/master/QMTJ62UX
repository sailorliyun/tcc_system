#!/bin/csh
#　スクリプト名  ： QMTJ62UX
#　 プロセス     ： ポイント付与候補者抽出
#　 機  能       ： 利用明細情報抽出Ｃ２
#　 作成者       ： FIP
#　 更新者       ： 
##########################################
#         共通環境設定                   #
##########################################
set    SHELL_NAME = $0                                      # シェル名
setenv JOB_ID       $SHELL_NAME:t                           # ジョブ名
setenv JOBNET_ID    'QMT406UX'                              # ジョブネット名
set    LOGFILE    = $USER_LOG_DIR/${JOB_ID}.log             # ログファイル名
set    LOGWRITE   = $EXE_DIR/QUAJ_MSGLOG.BAT                # ログ出力モジュール
setenv USERKEY      'QMTJ62UX'                              # ユーザキー
set    KINOU      = 'ポイント付与・利用明細情報抽出Ｃ２'

##########################################
#         固有環境設定                   #
##########################################
set    DATDIR     = /d321/UFS/data/qma
setenv OUTFILE1     $DATDIR/qmab_s000800_OT1_C2.dat
setenv JOKEN        `cat $DATDIR/QMAB_PARAM_JOKEN3.dat`
setenv HANI         `cat $DATDIR/QMAB_PARAM_RANGE2.dat`
set    PARA       = "$JOKEN $HANI"

##########################################
#         処理開始メッセージ             #
##########################################
set MODULE        = 'SHELL'                                 # モジュール
$LOGWRITE "$MODULE" I "開始：$KINOU" "$USERKEY"             # 開始メッセージの出力

##########################################
# STEP-1  抽選候補者抽出                 #
##########################################
STEP_1:
set MODULE = 'QMAB_S000800'
set STEPKINOU = '利用明細情報抽出'
$LOGWRITE "$MODULE" I "開始：$STEPKINOU" "$USERKEY"         #開始メッセージの出力

set PROGRAM = $EXE_DIR/qmab_s000800.exe
if ( -x $PROGRAM ) then
    setenv NLS_LANG  Japanese_Japan.JA16SJIS                #文字コード体系をSJISにする
    $PROGRAM "$PARA"   >&  $LOGFILE                         #プログラム起動
    set rc = $status                                        #リターンステータス退避
    setenv NLS_LANG  Japanese_Japan.JA16EUC                 #文字コード体系をEUCに戻す
else
    $LOGWRITE  "$MODULE"  E  "実行プログラム[$PROGRAM]が存在しない。" "$USERKEY"
    exit (1)                                                #異常終了
endif

if ($rc != 0) then                                          #リターンステータス判定
    set MSG = "失敗：$STEPKINOU RC=[$rc]"

    $LOGWRITE "$MODULE" E "$MSG" "$USERKEY"
    exit(1)                                                 #異常終了
endif

$LOGWRITE  "$MODULE" I "終了：$STEPKINOU" "$USERKEY"        #終了メッセージの出力

##################################
# STEP-99  終了メッセージ出力    #
##################################
STEP_99:
set MODULE = 'SHELL'
$LOGWRITE "$MODULE" I "終了：$KINOU" "$USERKEY"             # 終了メッセージの出力

exit(0)
